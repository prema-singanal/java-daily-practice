public class IntegerToBinary {

    // using array
    // Time complexity: O(log n) because
    // Loop 1 runs log n times
    // Loop 2 runs log n times
    // Total: O(log n) + O(log n) = O(log n)

    public static void convertToBinary(int num) {
        int[] remainder = new int[1000];
        int quotient = num;
        int i = 0;
        for (i = 0; quotient > 0; i++) {
            remainder[i] = quotient % 2;
            quotient = quotient / 2;
        }
        for (int j = i - 1; j >= 0; j--) {
            System.out.print(remainder[j]);
        }
        System.out.println();
    }

    // using recursion

    public static void convertToBinaryRecursive(int num) {
        if (num > 1) {
            convertToBinaryRecursive(num / 2);
        }
        System.out.print(num % 2);
    }

    // using string

    public static void convertToBinaryString(int num) {
        String s = "";
        while (num > 0) {
            s = (num % 2) + s;
            num = num / 2;
        }
        System.out.println(s);
    }

    // using built-in function
    public static void convertToBinaryBuiltIn(int num) {
        System.out.println(Integer.toBinaryString(num));
    }

    public static void main(String[] args) {
        convertToBinaryRecursive(124);
    }
}
